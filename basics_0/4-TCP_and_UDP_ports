#!/bin/bash

# Check if the user is running the script with superuser privileges
if [[ $EUID -ne 0 ]]; then
   echo "Please run this script as root."
   exit 1
fi

# Display active listening TCP/UDP ports with the corresponding PID and program name
echo "Active Internet connections (only servers)"
ss -tulnpe | awk 'NR==1 || /LISTEN/'
